{
  "name": "sage-future",
  "version": "0.0.1",
  "description": "Sage Design System",
  "author": "Design System Services, part of Shared Services at Kajabi",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/sage-future/sage-future.esm.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ju-Skinner/sturdy-dollop.git"
  },
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "run-s build.stencil.components build.styles",
    "build.docs": "run-s build.docs.clean build.stencil.docs build.eleventy",
    "build.docs.clean": "shx rm -rf dist_docs",
    "build.stencil.components": "stencil build && shx mv tmp/web-components.html-data.json dist/web-components.html-data.json && shx rm -r tmp",
    "build.stencil.docs": "stencil build --docs",
    "build.styles": "run-p build.styles.sage.components build.styles.sage.globals",
    "build.styles.docs.sage.globals": "postcss src/sage/global/styles/global.css --config=postcss.config.docs.js -m -o dist_docs/sage-ds.global.css",
    "build.styles.docs.docs": "postcss src/docs/global/styles/global.css --config=postcss.config.docs.js -m -o dist_docs/docs.css",
    "build.styles.sage.components": "postcss 'src/sage/components/**/*.css' --no-map -d dist/css/ && trash dist/css/sage-future.css 'dist/css/*.shadow.css' ; cat dist/css/*.css > dist/css/sage-future.css",
    "build.styles.sage.globals": "postcss src/sage/global/styles/global.css --no-map -o dist/css/sage-future.global.css",
    "lint": "run-s lint.ts lint.eslint lint.styles",
    "lint.styles": "stylelint ./src/**/*css",
    "lint.eslint": "eslint .",
    "lint.ts": "tsc --noemit -p tsconfig.docs.json",
    "lint-staged": "lint-staged",
    "start": "stencil build --dev --watch --serve",
    "test": "run-p test.stencil",
    "test.e2e": "run-s test.e2e.run test.e2e.cleanup",
    "test.e2e.cleanup": "ts-node scripts/screenshots.ts rm",
    "test.e2e.run": "stencil test --e2e --screenshot",
    "test.stencil": "stencil test --spec --e2e --screenshot --coverage",
    "test.stencil.unit": "stencil test --spec --coverage",
    "watch.eleventy": "dotenv -e .env -- yarn eleventy --watch",
    "watch.stencil": "stencil build --docs --watch --dev --no-open --config=stencil.config.docs.ts",
    "watch.stencil.test": "stencil test --spec --e2e --watchAll",
    "watch.styles.components": "chokidar src/sage/components/**/*.css -c 'yarn build.styles.docs.sage.globals'",
    "generate": "stencil generate",
    "prepare": "husky install"
  },
  "dependencies": {
    "@stencil/core": "^2.15.2"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/eslint-plugin": "^7.17.7",
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@stencil/eslint-plugin": "^0.4.0",
    "@stencil/postcss": "^2.1.0",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "cheerio": "^1.0.0-rc.10",
    "chokidar-cli": "^3.0.0",
    "cssnano": "^5.1.10",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.0",
    "glob": "^8.0.3",
    "husky": "^8.0.0",
    "jest": "^27.4.5",
    "jest-cli": "^27.4.5",
    "lint-staged": "^12.4.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^7.7.1",
    "prettier": "^2.6.2",
    "puppeteer": "^14.0.0",
    "shx": "^0.3.4",
    "stylelint": "^14.8.5",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-declaration-strict-value": "^1.8.0",
    "stylelint-no-unsupported-browser-features": "^5.0.3",
    "stylelint-use-nesting": "^3.0.0",
    "trash-cli": "^5.0.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4",
    "yargs": "^17.5.1"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "*.css": "stylelint"
  }
}
